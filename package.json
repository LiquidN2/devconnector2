{
  "name": "devconnector",
  "version": "1.0.0",
  "description": "Social network for developers",
  "main": "server.js",
  "author": "Hugh Nguyen",
  "license": "MIT",
  "scripts": {
    "client:install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon index.js",
    "client": "npm start --prefix client",
    "bat": "start-local-mongodb",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:localdb": "concurrently \"npm run bat\" \"npm run server:localdb\" \"npm run client\"",
    "server:localdb": "export NODE_ENV=developmentlocal || SET \"NODE_ENV=developmentlocal\" && nodemon server.js",
    "test-api": "export NODE_ENV=test || SET \"NODE_ENV=test\" && mocha --colors test/routes/api/*.test.js",
    "test-api-local": "export NODE_ENV=testlocal || SET \"NODE_ENV=testlocal\" && mocha --colors test/routes/api/*.test.js",
    "test": "jest --config=jest.config.json"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.0.1",
    "express": "^4.16.3",
    "gravatar": "^1.6.0",
    "jsonwebtoken": "^8.3.0",
    "mongodb": "^3.1.6",
    "mongoose": "^5.2.15",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^10.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "babel-loader": "^8.0.4",
    "chai": "^4.2.0",
    "jest": "^23.6.0",
    "mocha": "^5.2.0",
    "supertest": "^3.3.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9",
    "webpack-merge": "^4.1.4"
  }
}
